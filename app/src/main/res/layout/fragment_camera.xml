<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    tools:context=".fragments.UserFragment">

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/txt_food"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_food"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="" />

    <TextView
        android:id="@+id/txt_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_food"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="" />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/button_ui"
        android:elevation="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Take Photo"
        android:layout_marginBottom="70dp"
        android:textAllCaps="false"
        android:layout_toLeftOf="@+id/txt_scale"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gButton"
        android:layout_width="110dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/txt_scale"
        android:background="@drawable/button_ui"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Open Gallery"
        android:layout_marginBottom="70dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>